{% extends 'ux.html.twig' %}

{% block body %}
<turbo-frame id="main_turbo" data-turbo-action="advance" data-turbo-frame="_self">
    <main id="main">
        
            <!-- ======= Breadcrumbs ======= -->
            <section class="breadcrumbs">
                <div class="container">

                    <div class="d-flex justify-content-between align-items-center">
                        <h2></h2>
                        <ol>
                            <li><a href="{{ path("ux_index") }}">Home</a></li>
                            <li>{{ app.request.get('stack') }}</li>
                        </ol>
                    </div>

                </div>
            </section><!-- End Breadcrumbs -->
            <!-- ======= Portfolio Section ======= -->
            <section id="portfolio" class="portfolio">
                <div class="container">

                    <div class="section-title" data-aos="fade-up">
                        <h2>{{ app.request.get('stack') }} Apps</h2>
                    </div>

                    <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
                        {% for application in apps %}
                            <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                                <div class="portfolio-wrap">
                                    <img src="{{ asset('build/img/portfolio/portfolio-1.jpg') }}" class="img-fluid"
                                         alt="">
                                    <div class="portfolio-info">
                                        <h4>{{ application.name }}</h4>
                                        <div class="portfolio-links">
                                            <a href="{{ path("ux_tools",{"stack": app.request.get('stack') , "app": application.name }) }}"
                                               title="More Details"><i class="bx bx-link"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>

                </div>
            </section><!-- End Portfolio Section -->
       
    </main>
 </turbo-frame>
{% endblock %}