                        <div class="btn-wrap">
                            <a href="{{ path("react_index") }}" class="btn-buy">Check</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 mt-4 mt-lg-0">
                    <div class="box" data-aos="zoom-in" data-aos-delay="100">
