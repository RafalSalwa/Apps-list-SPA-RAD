                            <li>Coming soon</li>
                            <li>Vue3</li>
                            <li>Vue Router</li>
                            <li>Vite</li>
                            <li>Pinia</li>
                        </ul>
                        <div class="btn-wrap">
                            <a href="{{ path("vue_index") }}" class="btn-buy">Check</a>
                        </div>
                    </div>
